@model IEnumerable<FinalExamProblem2.Models.FootballSchedule>
@{
    ViewBag.Title = (Model.First().Season) + "chedule";
    var color = "white";
    var glyph = "glyphicon-globe";
    @*in components of bootstrap, returns the top right globe picture in the corner of the card and givers it a white color*@
}

<h2 style="text-align:center">OU Football Schedule for @Model.First().Season</h2>

@foreach (var item in Model)
        {
            if (item.IsHomeGame)
            {
                color = "darkred";
                glyph = "glyphicon-home";
            }
            else
            {
                color = "black";
                glyph = "glyphicon-globe";
            }

<div class="card" style="width: 250px; height: 255px; float:left; background-color:@color; margin: 5px; padding: 5px; border-radius:25px; color:white">
    <div class="card-body">
        <span class="@("glyphicon " + glyph)" style="color:white; font-size:2.2em"> </span>
        @if (item.Opponent.Trim().ToLower() == "texas")
        {
            <img src = "https://www.thelostogle.com/wp-content/uploads/2010/02/texas-longhorn-logo-450x225.jpg" class="card-img-top" style="width:50%" alt="horns down">
        }
        <h5 class="card-title">OU vs @item.Opponent</h5>
        <p class="card-text">@item.Date.ToLongDateString()</p>
    </div>
</div>

}
